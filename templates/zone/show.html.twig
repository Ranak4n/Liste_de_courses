{% extends 'base.html.twig' %}

{% block title %}{{ zone.nom }}{% endblock %}

{% block main_content %}
    <h1 class="mb-4">Zone - {{ zone.nom }}</h1>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ zone.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ zone.nom }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ zone.position }}</td>
            </tr>
        </tbody>
    </table>

    <!-- Liste des produits associés à cette zone -->
    <h2 class="mt-4">Produits dans cette zone</h2>
    {% if zone.produits|length > 0 %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Marque</th>
                <th>Nom</th>
                <th>Quantité</th>
                <th>Commentaires</th>
            </tr>
        </thead>
        <tbody>
            {% for produit in zone.produits %}
            <tr>
                <td>{{ produit.marque }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.quantite }}</td>
                <td>{{ produit.commentaires }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <p>Aucun produit trouvé dans cette zone.</p>
    {% endif %}

    <a href="{{ path('zone_index') }}" class="btn btn-secondary">Retour à la liste</a><br/>
    <a href="{{ path('zone_edit', {'id': zone.id}) }}" class="btn btn-primary">Modifier</a>
    {{ include('zone/_delete_form.html.twig') }}

{% endblock %}
