<form method="post" action="{{ path('produit_delete', {'id': produit.id}) }}" onsubmit="return confirm('{{ 'Êtes-vous sûr de supprimer ce produit ?' }}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
    <button type="submit" class="btn btn-danger">{{ 'Supprimer' }}</button>
</form>
