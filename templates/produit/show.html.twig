{% extends 'base.html.twig' %}

{% block title %}Produit - {{ produit.nom }}{% endblock %}

{% block main_content %}
    <h1>Détails du Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr> 
                <th>Marque</th>
                <td>{{ produit.marque }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ produit.quantite }}</td>
            </tr>
            <tr>
                <th>Commentaires</th>
                <td>{{ produit.commentaires | nl2br }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between my-3">
        <a href="{{ path('produit_index') }}" class="btn btn-secondary" aria-label="Retour à la liste des produits">
            Retour à la liste
        </a>
        <div>
            <a href="{{ path('produit_edit', {'id': produit.id}) }}" class="btn btn-primary" aria-label="Modifier le produit">
                Modifier
            </a>
            {{ include('produit/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
