{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block main_content %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr> 
                <th>Marque</th>
                <td>{{ produit.marque }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ produit.quantite }}</td>
            </tr>
            <tr>
                <th>Commentaires</th>
                <td>{{ produit.commentaires }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('produit_index') }}">Retour à la liste</a>

    <a href="{{ path('produit_edit', {'id': produit.id}) }}">Modifier</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
