{% extends 'base.html.twig' %}

{% block title %}Produit - {{ produit.nom }}{% endblock %}

{% block main_content %}
    <h1>Détails du Produit</h1>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr> 
                <th>Marque</th>
                <td>{{ produit.marque }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ produit.quantite }}</td>
            </tr>
            <tr>
                <th>Commentaires</th>
                <td>{{ produit.commentaires | nl2br }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('produit_index') }}" class="btn btn-secondary">Retour à la liste</a><br/>
    <a href="{{ path('produit_edit', {'id': produit.id}) }}" class="btn btn-primary">Modifier</a>
    {{ include('produit/_delete_form.html.twig') }}

{% endblock %}
