{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block main_content %}
    <div class="container mt-4">
        <h1 class="mb-4">Liste des Articles</h1>

        <div class="mb-3">
            <a href="{{ path('article_new') }}" class="btn btn-success">
                <i class="bi bi-plus-lg"></i> Créer un nouvel article
            </a>
        </div>

                {% for liste in listes %}
                    {% set articles = liste.articles|default([]) %}
                    {% if articles|length > 0 %}
                        <h2>Liste : {{ liste.titre }}</h2>
                        <table class="table table-striped table-bordered">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Produit</th>
                                    <th>Quantité</th>
                                    <th>Panier</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for article in articles %}
                                    <tr>
                                        <td>{{ article.id }}</td>
                                        <td>{{ article.produit.nom }}</td>
                                        <td>{{ article.quantite }}</td>
                                        <td>{{ article.panier ? 'Oui' : 'Non' }}</td>
                                        <td class="text-center">
                                            <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-info btn-sm">
                                                <i class="bi bi-eye"></i> Afficher
                                            </a>
                                            <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-primary btn-sm">
                                                <i class="bi bi-pencil"></i> Modifier
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p>Aucun article enregistré pour la liste "{{ liste.titre }}".</p>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}