{% extends 'base.html.twig' %}

{% block title %}Listes de Courses{% endblock %}

{% block main_content %}
    <div class="container mt-4">
        <h1 class="mb-4">Listes de Courses</h1>

        <div class="mb-3">
            <a href="{{ path('liste_new') }}" class="btn btn-success">
                <i class="bi bi-plus-lg"></i> Créer une nouvelle liste
            </a>
        </div>

        {% if listes|length > 0 %}
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Titre</th>
                    <th>Date des Courses</th>
                    <th>Terminée</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for liste in listes %}
                <tr>
                    <td>{{ liste.titre }}</td>
                    <td>{{ liste.dateCourses ? liste.dateCourses|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ liste.etat ? 'Oui' : 'Non' }}</td>
                    <td class="text-center">
                        <a href="{{ path('liste_show', {'id': liste.id}) }}" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Afficher
                        </a>
                        <a href="{{ path('liste_edit', {'id': liste.id}) }}" class="btn btn-primary btn-sm">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucune liste enregistrée.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
            <div class="alert alert-info">Aucune liste enregistrée.</div>
        {% endif %}
    </div>
{% endblock %}
