<script>
function confirmDelete() {
    // Message de confirmation avec la liste des articles qui seront supprimés
    var confirmMessage = "Êtes-vous sûr de vouloir supprimer cette liste et tous ses articles ?";
    return confirm(confirmMessage);
}
</script>

<form method="post" action="{{ path('liste_delete', {'id': liste.id}) }}" onsubmit="return confirmDelete();">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ liste.id) }}">
    <button type="submit" class="btn btn-danger">Supprimer</button>
</form>

